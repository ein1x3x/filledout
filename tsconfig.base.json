{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "preserveSymlinks": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@filledout/core": ["packages/core/src/index.ts"],
      "@filledout/react": ["packages/react/src/index.ts"],
      "@filledout/yup": ["packages/yup/src/index.ts"],
      "@filledout/zod": ["packages/zod/src/index.ts"],

    }
  },
  "exclude": ["node_modules", "tmp"]
}
